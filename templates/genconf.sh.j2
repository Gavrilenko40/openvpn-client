#!/bin/bash


KEY_DIR={{openvpn_etcdir}}
OUTPUT_DIR={{openvpn_etcdir}}
BASE_CONFIG={{openvpn_etcdir}}/base.conf

cat ${BASE_CONFIG} \
    <(echo -e '<ca>') \
    ${KEY_DIR}/ca.crt \
    <(echo -e '</ca>\n<cert>') \
    ${KEY_DIR}/client.crt \
    <(echo -e '</cert>\n<key>') \
    ${KEY_DIR}/client.key \
    <(echo -e '</key>\n<tls-auth>') \
    ${KEY_DIR}/ta.key \
    <(echo -e '</tls-auth>') \
    > ${OUTPUT_DIR}/config.conf
